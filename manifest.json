{
  "manifest_version": 3,
  "name": "Doucite",
  "version": "3.2.0",
  "description": "Doucite â€” editable, overrideable citations (APA/MLA/Chicago/IEEE/Harvard/Vancouver), exports, batch, i18n.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Doucite",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
