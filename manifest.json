{
  "manifest_version": 3,
  "name": "Doucite",
  "version": "3.0.0",
  "description": "Doucite â€” ultra-accurate, user-friendly citations with batch export, multiple styles, RIS/CSL-JSON, and i18n. Repo: https://github.com/changcheng967/Doucite",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Doucite",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
