{
  "manifest_version": 3,
  "name": "Doucite",
  "version": "4.2.1",
  "description": "Doucite â€” visible-first citation extractor, title-as-author fallback for APA, enhanced UI.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_title": "Doucite", "default_popup": "popup.html" },
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle" }],
  "web_accessible_resources": [{ "resources": ["popup.css"], "matches": ["<all_urls>"] }]
}
